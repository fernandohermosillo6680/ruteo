{
  "build": {
    "builder": "php",
    "options": {
      "install": "composer install --no-dev --optimize-autoloader"
    }
  },
  "start": {
    "command": "php artisan serve --host=0.0.0.0 --port=${PORT}"
  },
  "plugins": [
    {
      "plugin": "@railway/sqlite",
      "path": "database/database.sqlite"
    }
  ]
}
